<h1><%= @recipe.name %> - Ingredients</h1>
<form class="form-inline" action="/recipes/<%= @recipe.id %>/ingredients" method="post">
  <input type="hidden" name="_method" value="delete">
  <% @ingredients.each do |ingredient| %>
    <div class="checkbox">
      <label>
        <input type="checkbox" name="ingredient_ids[]" value="<%= ingredient.id %>"> <%= ingredient.name %>
      </label>
    </div>
  <% end %>
  <button type="submit" class="btn btn-danger" name="delete_ingredient">Delete Ingredients</button>
</form>
<br>
<form class="form-inline" action="/recipes/<%= @recipe.id %>/ingredients" method="post">
  <input type="hidden" name="_method" value="patch">
    <ul>
      <% @ingredients.each do |ingredient| %>
        <li><%= ingredient.name %>   -   Change to   -   <input type="text" id="<%= ingredient.id %>" name="<%= ingredient.id %>"></li>
      <% end %>
    </ul>
  <button type="submit" class="btn btn-success" name="update_ingredient">Edit Ingredients</button>
</form>
